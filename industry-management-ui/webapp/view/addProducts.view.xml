<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="inventorymanagementui.inventorymanagementui.controller.addProducts" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>addProductTitle}" showNavButton="true" navButtonPress="onBack">
		<content>
			<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true">
				<sap.ui.layout.form:formContainers>
					<sap.ui.layout.form:FormContainer title="{i18n>addProductMessage}">
						<sap.ui.layout.form:formElements>
							<sap.ui.layout.form:FormElement label="{i18n>productIdLabel}">
								<sap.ui.layout.form:fields>
									<Text width="50%" text="{i18n>productIdAutoGeneratedMessage}"/>
								</sap.ui.layout.form:fields>
							</sap.ui.layout.form:FormElement>
							<sap.ui.layout.form:FormElement label="{i18n>productnameFormLabel}">
								<sap.ui.layout.form:fields>
									<Input placeholder="{i18n>productnameFormPlaceholder}" width="50%" value="{newProductModel>/name}" liveChange="onNameChange"/>
								</sap.ui.layout.form:fields>
							</sap.ui.layout.form:FormElement>
							<sap.ui.layout.form:FormElement label="{i18n>descriptionFormLabel}">
								<sap.ui.layout.form:fields>
									<Input placeholder="{i18n>descriptionnameFormPlaceholder}" width="50%" value="{newProductModel>/description}" liveChange="onDescriptionChange"/>
								</sap.ui.layout.form:fields>
							</sap.ui.layout.form:FormElement>
							<sap.ui.layout.form:FormElement label="{i18n>supplierFormLabel}">
								<sap.ui.layout.form:fields>
									<ComboBox selectedKey="{newProductModel>/supplier}" width="50%">
										<items>
											<core:ListItem text="{i18n>supplierFormOption1}" key="PartsAreUs"/>
											<core:ListItem text="{i18n>supplierFormOption2}" key="TechTronics"/>
											<core:ListItem text="{i18n>supplierFormOption3}" key="TopWarez"/>
											<core:ListItem text="{i18n>supplierFormOption4}" key="QualityGoods"/>
										</items>
									</ComboBox>
								</sap.ui.layout.form:fields>
							</sap.ui.layout.form:FormElement>
							<sap.ui.layout.form:FormElement label="{i18n>priceFormLabel}">
								<sap.ui.layout.form:fields>
									<Input placeholder="{i18n>priceFormPlaceholder}" width="50%" type="Number" value="{newProductModel>/price}" liveChange="onPriceChange" />
								</sap.ui.layout.form:fields>
							</sap.ui.layout.form:FormElement>
							<sap.ui.layout.form:FormElement label="{i18n>availabilityFormLabel}">
								<sap.ui.layout.form:fields>
									<ComboBox selectedKey="{newProductModel>/available}" width="50%">
										<items>
											<core:ListItem text="{i18n>availabilityFormOptionTrue}" key="true"/>
											<core:ListItem text="{i18n>availabilityFormOptionFalse}" key="false"/>
										</items>
									</ComboBox>
								</sap.ui.layout.form:fields>
							</sap.ui.layout.form:FormElement>
							<sap.ui.layout.form:FormElement label="{i18n>quantityFormLabel}">
								<sap.ui.layout.form:fields>
									<Input placeholder="{i18n>quantityFormPlaceholder}" width="50%" type="Number" value="{newProductModel>/quantity}" liveChange="onQuantityChange"/>
								</sap.ui.layout.form:fields>
							</sap.ui.layout.form:FormElement>
						</sap.ui.layout.form:formElements>
					</sap.ui.layout.form:FormContainer>
				</sap.ui.layout.form:formContainers>
				<sap.ui.layout.form:layout>
					<sap.ui.layout.form:ResponsiveGridLayout/>
				</sap.ui.layout.form:layout>
			</sap.ui.layout.form:Form>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>saveButton}" width="125px" press="onSaveButtonPress" type="Emphasized" enabled="{parts: [{path:'inputFormValidationModel>/isNameValid'}, {path:'inputFormValidationModel>/isDescriptionValid'}, {path:'inputFormValidationModel>/isPriceValid'}, {path:'inputFormValidationModel>/isQuantityValid'}], formatter:'.formatSaveButtonEnablement'}"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>